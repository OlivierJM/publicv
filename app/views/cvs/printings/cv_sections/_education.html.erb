<% educations = @cv.custom_education_sort ? @cv.educations.by_position : @cv.educations.chronological_order %>

<% if educations.present? %>
  <div class="border-top py-5 px-3 pl-md-6">
    <div class="d-flex align-items-center justify-content-between">
      <h6><%= t('content.main.cv.show.education.title') %></h6>
    </div>

    <% educations.each_with_index do |education, index| %>
      <div class="d-flex flex-row font-size-14 pt-4 w-100">
        <span class="badge bg-light-1 h-100 p-2 pr-2">
          <i class="fas fa-md fa-building text-light-2"></i>
        </span>
        <div class="pr-5">
          <div class="pl-2 <%= (index == educations.size - 1) ? '' : 'pb-5' %>">
            <h6><%= education.school %></h6>
            <% if education.degree.present? %>
              <h6 class="font-weight-normal mb-1"><%= t('content.main.cv.show.education.degree', degree: education.degree) %></h6>
            <% end %>
            <p><%= study_period(education.started_on, education.ended_on) %></p>
            <p class="mb-0">Description: </p>
            <span><%= education.description.presence %></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>