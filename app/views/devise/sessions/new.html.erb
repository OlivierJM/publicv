<div class="middle-container-1">
  <div class="row py-40 py-md-80 mx-0">
    <div class="col-12 col-md-8 col-xl-4 mx-auto">
      <div class="card border-0 rounded">
        <div class="card-header text-center border-0 py-5">
          <h5><%= t('devise.sessions.signin_label') %></h5>
        </div>
        <div class="card-body p-5 border-left border-bottom border-right">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group mb-5 input-with-icon">
              <label class="text-muted d-block"><%= t('devise.sessions.username') %></label>
              <i class="icon-user text-muted"></i>
                <%= f.email_field(:email, autofocus: true, autocomplete: 'email', placeholder: t('devise.sessions.email'), class: 'form-control form-control-lg pl-40') %>
            </div>

            <div class="form-group mb-5 input-with-icon">
              <label class="text-muted d-block"> <%= t('devise.sessions.password') %></label>
              <span class="input-icon text-muted"><i class="icon-lock"></i></span>
              <%= f.password_field :password, autocomplete: 'current-password', placeholder: t('devise.sessions.password'), class: 'form-control form-control-lg pl-40' %>
            </div>

            <div class="d-flex align-items-center justify-content-between">
              <% if devise_mapping.rememberable? %>
                <div class="custom-control custom-checkbox">
                  <%= f.check_box :remember_me, class: "custom-control-input", id: "customCheck1" %>
                  <%= f.label :remember_me, class: 'custom-control-label text-muted', for: "customCheck1" %>
                </div>
              <% end %>
            </div>

            <div class="py-5 w-100">
              <%= f.submit t('devise.sessions.sign_in'), data: { disable_with: t('devise.sessions.signing_in') }, id: "#{resource_name}_log_in", class: 'btn btn-primary w-100 rounded' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
